<MyData>:
	orientation: "vertical"
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			Label:
				text: "hello"
				id: notice
				color: "red"
				size_hint: 1, .4
				font_size: sp(30)
		PageLayout:
			Button:
				text: 'page1'
				background_color: "red"
			Button:
				background_color: "blue"
				text: 'page2'
			Button:
				background_color: "yellow"
        		text: 'page3'
		BoxLayout:
			orientation: "vertical"
			AsyncImage:
				canvas.before:
					Color:
						rgba: (1,1,1,1)
					RoundedRectangle:
						texture: self.texture
						size: self.size
						pos: self.pos
						radius: [50,]
				id: image
				size: self.texture_size
				source: root.image_file
			Image:
				size: self.texture_size
				source: root.source_file

		BoxLayout:
			Button:
				text: 'download image'
				size_hint: 1, .2
				on_press: app.root.down_data()
			Button:
				text: 'show image'
				size_hint: 1, .2
				on_press: app.root.show_image()
			Button:
				text: 'delete image'
				size_hint: 1, .2
				on_press: app.root.delete()
