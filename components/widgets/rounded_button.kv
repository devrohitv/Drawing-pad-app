<RoundedButton@Button>
	background_color: (0,0,0,0)
	background_normal: '#FF8DE0'
	canvas.before:
		Color:
			rgba: (226/255, 0, 48/255, 1) if self.state == 'normal' else (1, 0, 0, 1)
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [22]

<RoundedPurpleButton@Button>
	background_color: (0,0,0,0)
	background_normal: '#FF8DE0'
	canvas.before:
		Color:
			rgba: (107/255, 22/255, 138/155, 1) if self.state == 'normal' else (1, .7, .8, 1)
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [22]

<RoundedSearchButton@Button>
	background_color: (0,0,0,0)
	background_normal: '#FF8DE0'
	canvas.before:
		Color:
			rgba: (130/255, 70/255, 0, 1)
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: [4]
